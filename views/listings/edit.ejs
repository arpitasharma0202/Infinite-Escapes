<% layout("layout/boilerplate")%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wanderlust</title>
  </head>
  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]"
         value="<%= listing.title %>"
          type="text" class="form-control"
          required/>
          <div class="invalid-feedback">Add a catchy title</div>
      </div>
      
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="listing[description]" class="form-control"required>
          <%= listing.description %> </textarea>
          <div class="invalid-feedback">Please add a short description</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Image link</lable>
        <input name="listing[image][url]" 
        value="<%= listing.image[0].url %>" 
        type="text" class="form-control" 
        required/>
      </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input name="listing[price]" 
          value="<%= listing.price %>" 
          type="number" class="form-control" 
          required/>
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        
        <div class="mb-3 col-md-4">
          <lable for="county" class="form-label">Country</lable>
          <input
          name="listing[country]"
          value="<%= listing.country %>"
          type="text" class="form-control"
          required/>
          <div class="invalid-feedback">Country should be valid</div>
        </div>
      </div>
      
      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
        name="listing[location]"
        value="<%= listing.location %>"
        type="text" class="form-control"
        required/>
        <div class="invalid-feedback">Location should be valid</div>
      </div>
      
      <br /><br />
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>

  </body>
</html>